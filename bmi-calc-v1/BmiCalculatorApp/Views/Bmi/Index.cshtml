@model BmiViewModel

<h1>BMI Calculator</h1>
<form asp-controller="BMI" asp-action="Index" method="post" enctype="application/x-www-form-urlencoded">

    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="Weight">Weight (kg):</label>
        <input asp-for="Weight" type="text" />
    </div>
    <div>
        <label asp-for="Height">Height (m):</label>
        <input asp-for="Height" type="text" />
    </div>
    <div>
        <label asp-for="BmiValue">BMI:</label>
        <input disabled="disabled" asp-for="BmiValue" type="text" value="@($"{Model.BmiValue:0.0}")" />
    </div>
    <div>
        <label asp-for="BmiSummary">Summary:</label>
        <input disabled="disabled" asp-for="BmiSummary" type="text" />
    </div>
    <button type="submit">Calculate</button>
    <a href="/">Clear</a>
</form>
